@model FMCGWebApplication.Models.Groups

@{
    ViewData["Title"] = "Delete Group";
}

<h2>Are you sure you want to delete this?</h2>

<div>
    <h4>Group Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Company Code</dt>
        <dd class="col-sm-10">@Model.CompanyCode</dd>

        <dt class="col-sm-2">Group Code</dt>
        <dd class="col-sm-10">@Model.GroupCode</dd>

        <dt class="col-sm-2">Group Name</dt>
        <dd class="col-sm-10">@Model.GroupName</dd>

        <dt class="col-sm-2">CrSeq</dt>
        <dd class="col-sm-10">@Model.CrSeq</dd>

        <dt class="col-sm-2">DrSeq</dt>
        <dd class="col-sm-10">@Model.DrSeq</dd>

        <dt class="col-sm-2">PTG</dt>
        <dd class="col-sm-10">@Model.PTG</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CompanyCode" />
        <input type="hidden" asp-for="GroupCode" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
